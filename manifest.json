{
  "manifest_version": 3,
  "name": "Minimal Pomodoro Timer",
  "version": "1.0",
  "description": "A clean and minimal Pomodoro timer for productivity",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Timer"
  },
  "web_accessible_resources": [
    {
      "resources": ["fullscreen.html", "settings.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
