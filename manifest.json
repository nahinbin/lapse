{
  "manifest_version": 3,
  "name": "Lapse",
  "version": "1.0",
  "description": "A clean and minimal Pomodoro timer for productivity",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lapse"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sticker.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fullscreen.html", "settings.html", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
